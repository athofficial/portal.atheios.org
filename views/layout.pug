      // load all styles

body
  .kpicss_bg-img
    nav.navbar.navbar-expand-lg.navbar-light
      a.navbar-brand(href='/').text-light
        img(src='images/ath_60x60.png',width=60, alt='Atheios Game developer portal- Get Your game credentials for Atheios integration').align-middle
        |  Atheios Game Developer Portal | #{version}

      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarSupportedContent.collapse.navbar-collapse
        ul.nav.navbar-nav.ml-auto
          li.nav-item.active.text-light
            a.h5.nav-link(href='/').text-light
              | Home
              span.sr-only (current)
          li.nav-item.active.text-light
            a.h5.nav-link(href='/whatsnew').text-light
              | What's new
          li.nav-item.dropdown
            if !user
              a#navbarDropdown.h5.nav-link.text-light.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | Account
              .dropdown-menu(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='/register') Register
                a.dropdown-item(href='/login') Login
            else
              a#navbarDropdown.h5.nav-link.text-light.dropdown-toggle(href='#', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | #{user.username}
              .dropdown-menu(aria-labelledby='navbarDropdown')
                a.dropdown-item(href='/account') Account
                a.dropdown-item(href='/logout') Logout



          li.nav-item.dropdown
            a#navbarDropdown.h5.nav-link.text-light.dropdown-toggle(href='/', role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              | Atheios links
            .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdown')
              a.dropdown-item.disabled(href='https://portal.atheios.org') Atheios Game Developer portal
              .dropdown-divider
              a.dropdown-item(href='https://www.atheios.org') Atheios website
              a.dropdown-item(href='https://explorer.atheios.org') Atheios explorer
              a.dropdown-item(href='https://stats.atheios.org') Atheios statistics
              a.dropdown-item(href='https://api.atheios.org') Atheios API
              a.dropdown-item(href='https://play.atheios.org') Atheios user portal
              a.dropdown-item(href='https://docs.atheios.org') Atheios documentation
              .dropdown-divider
              a.dropdown-item(href='https://bloxxchain.atheios.org') Bloxxchain
  .row.flex-xl-nowrap
    .col-md-3.col-xl-2.bd-sidebar
      form.bd-search.d-flex.align-items-center(role='search')
        span.algolia-autocomplete(style='position: relative; display: inline-block; direction: ltr;')
          input#search-input.form-control.ds-input(type='search', placeholder='Search...', aria-label='Search for...', autocomplete='off', data-docs-version='4.4', spellcheck='false', role='combobox', aria-autocomplete='list', aria-expanded='false', aria-owns='algolia-autocomplete-listbox-0', dir='auto', style='position: relative; vertical-align: top;')
          pre(aria-hidden='true', style='position: absolute; visibility: hidden; white-space: pre; font-family: -apple-system, system-ui, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"; font-size: 16px; font-style: normal; font-variant: normal; font-weight: 400; word-spacing: 0px; letter-spacing: normal; text-indent: 0px; text-rendering: auto; text-transform: none;').
          span#algolia-autocomplete-listbox-0.ds-dropdown-menu(role='listbox', style='position: absolute; top: 100%; z-index: 100; display: none; left: 0px; right: auto;')
            .ds-dataset-1
        button.btn.btn-link.bd-search-docs-toggle.d-md-none.p-0.ml-3(type='button', data-toggle='collapse', data-target='#bd-docs-nav', aria-controls='bd-docs-nav', aria-expanded='false', aria-label='Toggle docs navigation')
          svg(xmlns='http://www.w3.org/2000/svg', width='30', height='30', viewBox='0 0 30 30', role='img', focusable='false')
            title Menu
            path(stroke='currentColor', stroke-linecap='round', stroke-miterlimit='10', stroke-width='2', d='M4 7h22M4 15h22M4 23h22')
      nav#bd-docs-nav.collapse.bd-links(aria-label='Main navigation')
        .bd-toc-item.active
          a.bd-toc-link(href="#")
            | Documentation
          ul.nav.bd-sidenav
            li
              a(href='onboarding') Onboarding
        .bd-toc-item.active
          if user
            a.bd-toc-link(href="#")
              | Game assets
            ul.nav.bd-sidenav
              li
                a(href='currentgame') Current game asset
              li
                a(href='addgame') Add game asset
              li
                a(href='removegame') Remove game asset

        .bd-toc-item.active
          if user
            a.bd-toc-link(href="#")
              | GDP API calls
            ul.nav.bd-sidenav
              li
                a(href='') Add game result
              li
                a(href='') Query leader board
              li
                a(href='') Query player
              li
                a(href='') Wage play
              li
                a(href='') Create player


    main.col-md-9.col-xl-8.py-md-3.pl-md-5.bd-content(role='main')
      != messages('message', locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}

      .container
        block content
    block 2ndnav


